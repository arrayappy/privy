{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Solana Anchor Dev Pipeline",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Solana Test Validator",
                "Anchor Build && Deploy",
                // "Solana Logs",
                "Anchor Test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Solana Test Validator",
            "type": "shell",
            "command": "solana-test-validator -r",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Anchor Build && Deploy",
            "type": "shell",
            "command": "anchor build && anchor deploy",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "/bin/zsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Solana Logs",
            "type": "shell",
            "command": "solana logs",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Anchor Test",
            "type": "shell",
            "command": "anchor run test",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "/bin/zsh",
                    "args": [
                        "-c"
                    ]
                }
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
